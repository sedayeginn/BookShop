@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark btn btn-close">Çıkış Yap</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark btn btn-danger" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
        </li>
    }
    <li class="nav-item d-flex align-items-center">
        <a class="btn btn-sm btn-primary ml-1" asp-controller="Basket" asp-action="Index">
            <i class="fas fa-shopping-cart"></i> Sepet
            <span class="badge bg-white text-info" id="navBasketItemsCount">Ürün Yok</span>
        </a>
</ul>
